<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameLeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Игрок"
        android:textAlignment="textStart"
        android:textColor="#fff"
        android:autoSizeTextType="uniform"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLevel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/underLine"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="65"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="12 ур."
        android:textAlignment="center"
        android:paddingLeft="8dp"
        android:textColor="@color/colorAccent"
        android:paddingTop="4dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvNameLeader"
        app:layout_constraintBottom_toTopOf="@id/underLine"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="35"/>

    <View
        android:id="@+id/underLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5B2CC3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvLevel"
        app:layout_constraintStart_toStartOf="@id/tvNameLeader"
        app:layout_constraintTop_toBottomOf="@id/tvLevel" />

</androidx.constraintlayout.widget.ConstraintLayout>